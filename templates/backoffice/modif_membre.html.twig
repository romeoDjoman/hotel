{% extends 'base.html.twig' %}

{% block title %}Modifier un membre{% endblock %}

{% block body %}
    <section class="bg-gradient-primary">
        <div class="container">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image">
                            
                        </div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Modifier vos informations</h1>
                                </div>
                                <form class="user form-horizontal" method="post">
                                    {{ form_start(registrationForm) }}
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                    </div><br>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Mot de Passe</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                    </div><br>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Pseudo</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                    </div><br>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Nom</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                    </div><br>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Prénom</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                    </div><br>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Civilité</label>
                                        <div class="col-sm-10">
                                            {{ form_widget(registrationForm.civilite, {'attr': {'class': 'form-control form-control-user'}}) }}
                                        </div>
                                    </div><br>
                                    <div class="form-group row">
                                        <div class="col-sm-10 offset-sm-2">
                                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                                        </div>
                                    </div><br>
                                    {{ form_end(registrationForm) }}
                                </form>
                                <div class="text-center">
                                    <a class="small" href="#">Mot de passe oublié ?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="#">Déjà un compte ? Connexion!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
